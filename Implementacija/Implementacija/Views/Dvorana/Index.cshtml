@* ExcludeFromCodeCoverage *@

@model IEnumerable<Implementacija.Models.Dvorana>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Iznajmljivac"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazivDvorane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresaDvorane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojSjedista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iznajmljivac)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazivDvorane)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adresaDvorane)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojSjedista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iznajmljivac.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
