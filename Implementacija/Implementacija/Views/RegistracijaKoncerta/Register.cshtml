@model Implementacija.Models.RegistracijaKoncerta
@{
    <head>
    <style>
            .tipka {
                display: inline-block;
                padding: 10px 20px;
                background-color: #337ab7;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
                border: none;
            }
    </style>
    
    </head>


    <body>
    <h1 >Registracija koncerta</h1>

    <form asp-action="Register">
        <div class="form-group">
            <label>Naziv koncerta:</label>
            <input class="form-control" asp-for="naziv" />
        </div>
        <div class="form-group">
            <label>Datum:</label>
            <input class="form-control" asp-for="datum" type="date" />
        </div>
        <div class="form-group">
            <label>Izvodjac:</label>
            <input class="form-control" asp-for="izvodjac" />
        </div>
        <div class="form-group">
            <label>Zanr:</label>
            <textarea class="form-control" asp-for="zanr"></textarea>
        </div>
            <a asp-action="confirmation" class="tipka">Potvrdi registraciju </a>
        @*<button type="submit" class="btn btn-primary">registruj</button>*@
        
    </form>
    
    </body>
}
